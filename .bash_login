#!/bin/bash

TREZOA_LOCKFILE="/home/trezoa/.trezoa.lock"

[ -f ~/.bashrc ] && . ~/.bashrc

GUEST_WARNING="

WARNING!!!!!!!!!!!

YOU ARE A GUEST IN ${TREZOA_LOCK_USER}'s TESTNET.  BE KIND!

WARNING!!!!!!!!!!!

"

if [ -f "$TREZOA_LOCKFILE" ]; then
  [ -f "$TREZOA_LOCKFILE" ] && . "$TREZOA_LOCKFILE"
  if ! [ "$TREZOA_USER" = "$TREZOA_LOCK_USER" ]; then
    export PS1='\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;31m\]GUEST\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
    clear
    echo "$GUEST_WARNING"
  fi
fi

